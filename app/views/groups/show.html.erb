<p style="color: green"><%= notice %></p>

<%= render @group %>

<div class="flex flex-col items-center">
<%= button_to "Destroy this group", @group, method: :delete, class:"m-5 text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" %>
</div>

<h2 class="text-center font-extrabold text-2xl", style="color: #434b54">Transactions</h2>

<div class="flex bottom-0 justify-center items-center", style="min-width: 100vw; background: #5fb523; color: white; position: fixed; height: 69px">
  <%= link_to "NEW TRANSACTION", new_proceeding_path, class:"border px-5 py-3" %>
</div>

<% @group.proceedings.each do |g| %>
  <div class="flex justify-between items-center p-5 m-5 bg-white shadow-xl">
    <div class="flex flex-col items-center items-end p-1">
      <%= button_to "X", g, method: :delete, class:"text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" %>
      <p class=""><%= g.name %></p>
    </div>
    <p class="font-extrabold">$<%= g.amount %></p>
  </div>
<% end %>

