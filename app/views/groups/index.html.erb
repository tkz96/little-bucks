<p style="color: green"><%= notice %></p>

<div>

  <h1 class="m-5 text-center text-3xl text-gray-900 font-bold">GROUPS</h1>

  <div id="groups">
    <% @groups.each do |group| %>
      <%= link_to group do %>
        <%= render group %>
      <% end %>
    <% end %>
  </div>

  <div class="flex bottom-0 justify-center items-center", style="min-width: 100vw; background: #5fb523; color: white; position: fixed; height: 69px">
    <%= link_to "New group", new_group_path %>
  </div>
</div>