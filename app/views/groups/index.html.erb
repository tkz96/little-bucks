<p style="color: green"><%= notice %></p>

<div>

  <h1 class="m-5 text-center text-3xl text-gray-900 font-bold">GROUPS</h1>
  <div class="flex flex-col items-center">
    <%= link_to "New group", new_group_path, class:"self-center text-white bg-green-700 hover:bg-green-800 focus:outline-none focus:ring-4 focus:ring-green-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800" %>
  </div>

  <div id="groups">
    <% @groups.each do |group| %>
      <%= link_to group do %>
        <%= render group %>
      <% end %>
    <% end %>
  </div>

</div>